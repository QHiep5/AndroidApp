<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Logo hình tròn có viền -->
        <ImageView
            android:id="@+id/imgHinh"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_border"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

        <!-- Tên công ty / tiêu đề -->
        <TextView
            android:id="@+id/txtTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imgHinh"
            android:layout_marginStart="12dp"
            android:layout_alignTop="@id/imgHinh"
            android:text="abc"
            android:textColor="@color/textPrimary"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Vị trí -->
        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTen"
            android:layout_toEndOf="@id/imgHinh"
            android:layout_marginTop="6dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Hồ Chí Minh"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />
        </LinearLayout>

        <!-- Lương -->
        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationLayout"
            android:layout_toEndOf="@id/imgHinh"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_flash" />

            <TextView
                android:id="@+id/txtSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="10,000 đ"
                android:textSize="14sp"
                android:textColor="@color/textSecondary" />
        </LinearLayout>

        <!-- Ngày đăng bên góc dưới phải -->
        <TextView
            android:id="@+id/txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 days ago"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/salaryLayout" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
