<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Thông tin cá nhân -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_profile_card"
            android:padding="16dp"
            android:gravity="center_vertical"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp">

            <FrameLayout
                android:layout_width="72dp"
                android:layout_height="72dp">

                <ImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/circle_border"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/img_camera"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_camera"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_circle_white"
                    android:padding="4dp"
                    android:elevation="4dp"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên người dùng"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mã ứng viên: 123456"
                    android:textSize="14sp"
                    android:textColor="@color/textSecondary"
                    android:layout_marginTop="2dp"/>

                <Button
                    android:id="@+id/btn_upgrade"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_button_upgrade"
                    android:text="Nâng cấp tài khoản"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Các mục thông tin cá nhân -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp">

            <!-- Kinh nghiệm làm việc -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Kinh nghiệm làm việc"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa cập nhật"
                    android:textColor="#FF9800"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn_edit_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:textColor="#4CAF50"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Vị trí chuyên môn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vị trí chuyên môn"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa cập nhật"
                    android:textColor="#FF9800"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn_edit_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:textColor="#4CAF50"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

            <!-- Địa điểm làm việc mong muốn -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Địa điểm làm việc mong muốn"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chưa cập nhật"
                    android:textColor="#FF9800"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn_edit_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sửa"
                    android:textColor="#4CAF50"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Quản lý hồ sơ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Trạng thái tìm việc"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/switch_job_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="8dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cho phép NTD liên hệ"
                    android:textSize="16sp"/>
                <Switch
                    android:id="@+id/switch_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Chính sách & hỗ trợ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:elevation="1dp">

            <Button
                android:id="@+id/btn_policy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chính sách bảo mật"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_policy"
                android:gravity="start|center_vertical"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/btn_help"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trợ giúp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_help"
                android:gravity="start|center_vertical"
                android:paddingVertical="8dp"/>

            <Button
                android:id="@+id/btn_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đánh giá ứng dụng"
                android:background="@android:color/transparent"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:drawableLeft="@drawable/ic_star"
                android:gravity="start|center_vertical"
                android:paddingVertical="8dp"/>
        </LinearLayout>

        <!-- Nút Đăng xuất -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:background="@drawable/bg_button_logout"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</ScrollView> 