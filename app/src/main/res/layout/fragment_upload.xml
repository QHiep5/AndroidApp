<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Toolbar với nút back và tiêu đề -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#03A9F4"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/tvToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ME Technician (Kĩ Thuật...)"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_gravity="center" />
    </androidx.appcompat.widget.Toolbar>


    <!-- Nội dung chính -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Mô tả -->
        <TextView
            android:id="@+id/tv_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hồ sơ này sẽ được gửi đến nhà tuyển dụng."
            android:textSize="16sp"
            android:textColor="#666666"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:textAlignment="center" />

        <!-- Ô đính kèm -->
        <LinearLayout
            android:id="@+id/attach_cv_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/bg_attach_box"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_upload"
                app:tint="#2196F3" />

            <TextView
                android:id="@+id/tv_attach_cv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đính kèm CV"
                android:textSize="16sp"
                android:textColor="#2196F3"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/btn_confirm_apply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Xác nhận ứng tuyển"
            android:textAllCaps="false"
            android:drawablePadding="8dp"
            android:textColor="@android:color/white"
            android:backgroundTint="#F5A623"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</LinearLayout>
